# Application Configuration Example
# Copy this to application.properties and adjust values

spring.application.name=youglish-reels

# Database Configuration
# Change these values to match your PostgreSQL setup
spring.datasource.url=jdbc:postgresql://localhost:5432/youglish_reels
spring.datasource.username=postgres
spring.datasource.password=your_password_here
spring.datasource.driver-class-name=org.postgresql.Driver

# JPA Configuration
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.PostgreSQLDialect
spring.jpa.properties.hibernate.format_sql=true

# Server Configuration
server.port=8080

# JWT Configuration
# IMPORTANT: Change this secret in production!
# Generate a secure 256-bit key: openssl rand -base64 32
jwt.secret=dGhpc2lzYXZlcnlsb25nc2VjcmV0a2V5Zm9yand0dG9rZW5nZW5lcmF0aW9ueW91c2hvdWxkY2hhbmdldGhpc2lucHJvZHVjdGlvbmVudmlyb25tZW50
jwt.expiration=86400000

# CORS Configuration
# Add your frontend URLs here
cors.allowed-origins=http://localhost:4200,http://localhost:4201

# YouGlish API Configuration
youglish.api.base-url=https://youglish.com
youglish.api.timeout=30000

# Logging
logging.level.youglish.anki.demo=DEBUG
logging.level.org.springframework.security=DEBUG
logging.level.org.hibernate.SQL=DEBUG

